#!/usr/bin/env ruby
# -*- coding: utf-8 -*-
# vim: filetype=ruby

Encoding.default_internal = 'UTF-8'
Encoding.default_external = 'UTF-8'

module Piano

module_function

def shibu_onp

begin

require '~/mecab_ruby_keitaiso/lib/rice'

rescue SystemCallError => ex
	puts ex.backtrace
rescue IOError => ee
	puts ee.backtrace
rescue Exception => e
	puts e.backtrace
rescue Errno::ENOENT
	puts '読み込みファイルを指定してください'
rescue Errno::EACCES
	puts 'ファイルへアクセス権限がありません'
rescue LoadError
	puts '対象ファイルがありません'
ensure
	puts ''
	puts '形態素解析を終了します...'
	puts ''
end
end

def version
	require 'version'
end

end

two = ARGV[1]

case
when two.nil?
Piano.shibu_onp
else
Piano.version
end

__END__
